<div class="row">
    <div class="col-12">
        <div class="jumbotron title">
            <div class="header">
                <div id="headerJumbotron">Mongo Scraper</div>
                <div id="subheaderJumbotron">NPR News Edition</div>
            </div>
        </div>
    </div>
</div>

<nav class="navbar navbar-expand" id="navbar">

    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link navLink" href="/">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link navLink" href="/saved">Saved Articles</a>
        </li>
    </ul>

    <button type="button" class="btn btn-primary btn-lg" id="scrapeArticlesBtn">Scrape New Articles</button>

</nav>

<div class="articleContainer">
    <div class="row">

        <div class="col-1">
        </div>

        <div class="col-10 articleColumn">

            {{#each articles}}

            <div class="card">
                <div class="card-header">
                    <a class="headlineLink" href={{link}} target="_blank">{{title}}</a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-2">
                            <img class="articleImage" src={{photo}}>
                        </div>

                        <div class="col-8">
                            <p>{{description}}</p>
                        </div>

                        <div class="col-2 buttonColumn">
                            <button type="button" class="btn btn-primary saveArticleButton" data-id={{id}}>Save
                                Article</button>
                        </div>
                    </div>
                </div>
            </div>

            {{/each}}
        </div>

        <div class="col-1">
        </div>

    </div>
</div>


<div class="modal fade" id="scrapeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title scrapedTitle">Articles Scraped</h5>
            </div>
            <div class="modal-body scrapedBody">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="closeScrapeBtn" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="savedModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title savedTitle">Success!</h5>
            </div>
            <div class="modal-body savedBody">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="closeArticleBtn" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>